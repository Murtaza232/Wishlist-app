          btn.style.transform = '';
          btn.style.width = '48px';
          btn.style.height = '48px';
          btn.style.padding = '0';
          btn.style.display = 'flex';
          btn.style.alignItems = 'center';
          btn.style.justifyContent = 'center';
          btn.style.borderRadius = '50%';
          btn.classList.add('circular');
          btn.innerHTML = '<span class="wishlist-heart-icon" aria-hidden="true" style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%;">' +
            `<svg width="24" height="24" viewBox="0 0 24 24" fill="${secondaryColor}" stroke="${secondaryColor}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 21c-4.5-4.2-8-7.2-8-11.1C4 5.5 7.5 4 10 6.5c1.2 1.2 2 2.5 2 2.5s.8-1.3 2-2.5C16.5 4 20 5.5 20 9.9c0 2.2-1.2 4.2-3.5 6.7-.8.9-1.7 1.7-2.5 2.4z"/></svg>` +
            '</span>';
        } else if (floatingBtnPosition === 'bottom-right') {
          btn.style.bottom = '32px';
          btn.style.right = '32px';
          btn.style.top = '';
          btn.style.left = '';
          btn.style.transform = '';
          btn.style.width = '48px';
          btn.style.height = '48px';
          btn.style.padding = '0';
          btn.style.display = 'flex';
          btn.style.alignItems = 'center';
          btn.style.justifyContent = 'center';
          btn.style.borderRadius = '50%';
          btn.classList.add('circular');
          btn.innerHTML = '<span class="wishlist-heart-icon" aria-hidden="true" style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; margin-left: 1px;">' +
            `<svg width="24" height="24" viewBox="0 0 24 24" fill="${secondaryColor}" stroke="${secondaryColor}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 21c-4.5-4.2-8-7.2-8-11.1C4 5.5 7.5 4 10 6.5c1.2 1.2 2 2.5 2 2.5s.8-1.3 2-2.5C16.5 4 20 5.5 20 9.9c0 2.2-1.2 4.2-3.5 6.7-.8.9-1.7 1.7-2.5 2.4z"/></svg>` +
            '</span>';
        } else { // default to left
          btn.style.top = '50%';
          btn.style.left = '32px';
          btn.style.right = '';
          btn.style.bottom = '';
          btn.style.transform = 'translateY(-50%)';
          btn.style.width = '';
          btn.style.height = '';
          btn.style.padding = '';
          btn.innerHTML = '<span class="wishlist-heart-icon" aria-hidden="true">' +
            `<svg width="22" height="22" viewBox="0 0 24 24" fill="${secondaryColor}" stroke="${secondaryColor}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 21c-4.5-4.2-8-7.2-8-11.1C4 5.5 7.5 4 10 6.5c1.2 1.2 2 2.5 2 2.5s.8-1.3 2-2.5C16.5 4 20 5.5 20 9.9c0 2.2-1.2 4.2-3.5 6.7-.8.9-1.7 1.7-2.5 2.4z"/></svg>` +
              `</span><span class="wishlist-btn-text" style=\"color: ${secondaryColor}; font-size: 2rem; font-weight: 600;\">My Wishlist</span>`;
        }
        // Show badge if metafield is true
        var showCount = metafields['show_count_floating_btn'] === 'true';
        if (showCount) {
          fetch('https://phpstack-362288-5709690.cloudwaysapps.com/api/wishlist-count?customer_id=' + encodeURIComponent(customerId))
